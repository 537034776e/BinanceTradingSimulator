@using BinanceTradingSimulator.Models
@model List<Order>

<h2>Elenco Ordini</h2>

@if (Model.Count()==0)
{
    <p>non ci sono ordini</p>
}
else
{
<table>
    <tr>
        <th>Simbolo</th>
        <th>Prezzo</th>
        <th>Quantità</th>
    </tr>
    @foreach (var order in Model)
    {
        <tr>
            <td>@order.Symbol</td>
            <td>@order.Price</td>
            <td>@order.Quantity</td>
        </tr>
    }
</table>
}